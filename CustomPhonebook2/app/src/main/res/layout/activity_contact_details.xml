<?xml version="1.0" encoding="utf-8"?>

<!-- Layout file for the contact details activity displaying four text boxes for the contact details and buttons for Save, Delete and Modify operations,
     which may be visible or hidden based on in which mode the activity is launched.
     @authors: Koulick Sankar Paul(ksp160330), Gunjan Tomer(gxt160930) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.wra1th.customphonebook.ContactDetailsActivity">

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="10sp"
        android:inputType="textPersonName"
        android:hint="First name"/>

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="10sp"
        android:inputType="textPersonName"
        android:hint="Last name"/>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="10sp"
        android:inputType="phone"
        android:hint="Phone number"/>

    <EditText
        android:id="@+id/et_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="2sp"
        android:layout_marginVertical="10sp"
        android:inputType="textEmailAddress"
        android:hint="Email address"/>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b_save"
            android:layout_weight="1"
            android:text="Save"
            android:onClick="onClick"
            android:layout_marginHorizontal="10sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/b_modify"
            android:layout_weight="1"
            android:text="Modify"
            android:onClick="onClick"
            android:layout_marginHorizontal="10sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/b_delete"
            android:layout_weight="1"
            android:text="Delete"
            android:onClick="onClick"
            android:layout_marginHorizontal="10sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
